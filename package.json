{
  "name": "starter-blog",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "next dev",
    "dev": "INIT_CWD=$PWD next dev",
    "build": "INIT_CWD=$PWD next build",
    "postbuild": "yarn sitemap && yarn rss && yarn search",
    "sitemap": "cross-env NODE_OPTIONS='--experimental-json-modules' node -r esbuild-register ./scripts/sitemap.mjs",
    "rss": "cross-env NODE_OPTIONS='--experimental-json-modules' node -r esbuild-register ./scripts/rss.mjs",
    "search": "cross-env NODE_OPTIONS='--experimental-json-modules' node -r esbuild-register ./scripts/search.mjs",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir components --dir lib --dir layouts --dir scripts",
    "refresh-books": "npm run copynotes && npm run goodreads",
    "copynotes": "sudo bash ./copynotes.sh",
    "goodreads": "node goodreads.js"
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.20",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.3",
    "cheerio": "^1.0.0",
    "contentlayer": "^0.3.4",
    "esbuild": "^0.23.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "image-size": "^1.1.1",
    "mdx-bundler": "^10.0.2",
    "next": "^13.5.6",
    "next-contentlayer": "^0.3.4",
    "next-themes": "^0.3.0",
    "pliny": "0.0.8",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-preset-minify": "^7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "tailwindcss": "^3.4.9",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "12.3.1",
    "@svgr/webpack": "^6.3.1",
    "@types/react": "^18.0.18",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "esbuild-register": "3.3.3",
    "eslint": "^8.23.0",
    "eslint-config-next": "12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "file-loader": "^6.0.0",
    "globby": "11.0.3",
    "husky": "^8.0.0",
    "js-yaml": "4.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.7.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
